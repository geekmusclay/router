{
    "name": "geekmusclay/router",
    "description": "A simple router, for learning and fun",
    "version": "0.3.0",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Geekmusclay\\Router\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "geekmusclay",
            "email": "contact@geekmusclay.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/psr7": "^2.4",
        "geekmusclay/di-container": "^0.1.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.4",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "thecodingmachine/phpstan-safe-rule": "^1.2",
        "symfony/var-dumper": "^6.2"
    },
    "scripts": {
        "analyse": "vendor\\bin\\phpstan analyse -c phpstan.neon",
        "tests": "vendor\\bin\\phpunit tests",
        "cs-check": "vendor\\bin\\phpcs",
        "cs-fix": "vendor\\bin\\phpcbf"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../di-container"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
